{
    "compilerOptions": {
        "target": "ESNext",
        "module": "CommonJS",
        "lib": [
            "ES2015",
            "ES2016",
            "ES2017",
            "ES2018",
            "ESNext"
        ],
        "declaration": false,
        "strict": true,
        "outDir": "./build",
        "rootDir": "./src",
        "noImplicitAny": false,
        "moduleResolution": "node",
        "types": ["node"],
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}